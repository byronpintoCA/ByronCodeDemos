<Window x:Class="ByronSouthParkDemo.UIStaging"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ByronSouthParkDemo"
        mc:Ignorable="d"
        Title="UIStaging" Height="450" Width="800" FontWeight="Bold" FontSize="16" FontFamily="Segoe UI Emoji">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">South Park Characters</Label>

        <Label Grid.Row="1" Grid.Column="1">Character Infor</Label>

        <ListView  Grid.Row="1" Grid.Column="0">Items</ListView>

        <Label Grid.Row="0" Grid.Column="0" Background="Beige" VerticalAlignment="Bottom">Time Section</Label>

        <Label Grid.Row="1" Grid.Column="2" Background="Beige">Control Section</Label>

    </Grid>
</Window>
